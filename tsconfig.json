{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "bundler",

    "strict": true,
    "jsx": "react-jsx",

    "isolatedModules": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": false,

    "sourceMap": true,
    "declaration": false,
    "declarationMap": false
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
